pipeline {
    agent any
    
    stages {
        stage ('Clone') {
            steps {
                git branch: "main", url: "https://github.com/Saurabh-WT/my-app.git"
            }
        }
        stage ('Build') {
            steps {
                sh "mvn clean install"
            }
        }
        stage ('Deploy') {
            steps {
                sh "cp target/app.war /opt/tomcat/webapps/"
            }
            }
        }
    }
        
